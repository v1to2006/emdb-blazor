@inject NavigationManager NavigationManager

<div class="container">
    <div class="row">
        <div class="col-4 col-md-6 col-sm-12">
            <div class="content">
                <a href="/" class="logo">
                    <i class='main-color'></i>EMD<span class="main-color">b</span>
                </a>
                <p>
                    EMDb - Eduko Movie Database
                </p>
                <div class="social-list">
                    <a href="https://www.facebook.com/" class="social-item">
                        <i class="bx bxl-facebook"></i>
                    </a>
                    <a href="https://x.com/" class="social-item">
                        <i class="bx bxl-twitter"></i>
                    </a>
                    <a href="https://www.instagram.com/" class="social-item">
                        <i class="bx bxl-instagram"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-8 col-md-6 col-sm-12">
            <div class="row">
                <div class="col-3 col-md-6 col-sm-6">
                    <div class="content">
                        <p><b>EMDb</b></p>
                        <ul class="footer-menu">
                            <li><a href="/">Home</a></li>
                            <li><a href="/addmovie">Add Movie</a></li>
                            <li><a href="/profile">Profile</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-3 col-md-6 col-sm-6">
                    <div class="content">
                        <p><b>Download app</b></p>
                        <ul class="footer-menu">
                            <li>
                                <a href="https://play.google.com/store/games?hl=en&gl=US">
                                    <img src="./images/google-play.png" alt="">
                                </a>
                            </li>
                            <li>
                                <a href="https://www.apple.com/app-store/">
                                    <img src="./images/app-store.png" alt="">
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private void NavigateToHome()
    {
        NavigationManager.NavigateTo("/");
    }

    private void NavigateToAddMovie()
    {
        NavigationManager.NavigateTo("/addmovie");
    }

    private void NavigateToProfile()
    {
        NavigationManager.NavigateTo("/profile");
    }
}